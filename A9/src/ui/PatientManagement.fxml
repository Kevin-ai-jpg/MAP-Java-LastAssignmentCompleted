<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.PatientManagementController">

    <!-- Top: Title and Filters -->
    <top>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Patient Management" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-background-radius: 5;">
                <Label text="Filter by:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="filterNameField" promptText="Name..." />
                <Button fx:id="filterNameButton" text="Filter Name" />
                <Separator orientation="VERTICAL" />
                <TextField fx:id="filterAgeField" promptText="Age..." prefWidth="60"/>
                <Button fx:id="filterAgeButton" text="Filter Age" />
                <Button fx:id="resetFilterButton" text="Reset / Show All" />
            </HBox>
        </VBox>
    </top>

    <!-- Center: The Table -->
    <center>
        <TableView fx:id="patientTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                <TableColumn fx:id="emailColumn" text="Email" prefWidth="150" />
                <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="100" />
                <TableColumn fx:id="ageColumn" text="Age" prefWidth="50" />
            </columns>
        </TableView>
    </center>

    <!-- Right: The Input Form -->
    <right>
        <VBox spacing="10" alignment="TOP_CENTER" prefWidth="250">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Patient Details" style="-fx-font-weight: bold;"/>

            <TextField fx:id="idField" promptText="ID" />
            <TextField fx:id="nameField" promptText="Name" />
            <TextField fx:id="emailField" promptText="Email" />
            <TextField fx:id="phoneField" promptText="Phone" />
            <TextField fx:id="ageField" promptText="Age" />

            <Button fx:id="addButton" text="Add Patient" maxWidth="Infinity" />
            <Button fx:id="updateButton" text="Update Patient" maxWidth="Infinity" />
            <Button fx:id="deleteButton" text="Delete Patient" maxWidth="Infinity" />
            <Button fx:id="undoButton" text="Undo" maxWidth="Infinity" />
            <Button fx:id="redoButton" text="Redo" maxWidth="Infinity" />
        </VBox>
    </right>
</BorderPane>